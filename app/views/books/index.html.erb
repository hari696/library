<div class="container">
	<h1>Books Lists</h1>

	<table align="center" class="table-striped">
		<tr>
			<th>Title</th>
			<th>Text</th>
			<th>View</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
		<% @books.each do |book| %>

		<tr>
			<td><%= book.title %></td>
			<td><%= book.text %></td>
			<td><%= link_to 'View', book_path(book), {:class => 'btn btn-default  links'} %></td>
			<td><%= link_to 'Edit', edit_book_path(book), {:class => 'btn btn-default  links'} %></td>
			<td><%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default links' %></td>

		</tr>
		<% end %>
	</table>

	<div>

		<%= link_to 'New Books', new_book_path, {:class => 'btn btn-primary btn-lg links'} %>
		<%= link_to 'Sign Out', destroy_user_session_path, :method => :delete, :class=>'btn btn-primary btn-lg links_signout' %>
	
	</div>
</div>